<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient_draw"
    android:fitsSystemWindows="true"
    tools:context=".ActivityHome"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="#6495ed">
    </androidx.appcompat.widget.Toolbar>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie0.0"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:gravity="center_horizontal"
                app:lottie_autoPlay="true"
                app:lottie_fileName="x-ray.json"
                app:lottie_loop="true" />



            <androidx.cardview.widget.CardView
                android:id="@+id/tema1"
                android:layout_below="@+id/lottie0.0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:elevation="12dp"
                app:cardCornerRadius="5dp"
                android:layout_centerHorizontal="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/tema1_img"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="left"
                        app:civ_border_width="2dp"
                        android:padding="5dp"
                        android:src="@drawable/corads" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tema1_img"
                        android:fontFamily="@font/teen"
                        android:layout_marginTop="23dp"
                        android:layout_marginLeft="25dp"
                        android:text="Introducción"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tema2"
                android:layout_below="@+id/tema1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:elevation="12dp"
                app:cardCornerRadius="5dp"
                android:layout_centerHorizontal="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/tema2_img"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="left"
                        app:civ_border_width="2dp"
                        android:padding="5dp"
                        android:src="@drawable/corads" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="23dp"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@+id/tema2_img"
                        android:fontFamily="@font/teen"
                        android:layout_gravity="center_horizontal"
                        android:text="Recomendaciones"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/tema3"
                android:layout_below="@+id/tema2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:elevation="12dp"
                app:cardCornerRadius="5dp"
                android:layout_centerHorizontal="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/tema3_img"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="left"
                        app:civ_border_width="2dp"
                        android:padding="5dp"
                        android:src="@drawable/corads" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tema3_img"
                        android:fontFamily="@font/teen"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="23dp"
                        android:layout_marginLeft="25dp"
                        android:text="Estudios Imagenológicos"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tema4"
                android:layout_below="@+id/tema3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:elevation="12dp"
                app:cardCornerRadius="5dp"
                android:layout_centerHorizontal="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/tema4_img"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="left"
                        app:civ_border_width="2dp"
                        android:padding="5dp"
                        android:src="@drawable/corads" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="23dp"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@+id/tema4_img"
                        android:fontFamily="@font/teen"
                        android:layout_gravity="center_horizontal"
                        android:text="Referencias Bibliográficas"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>



        </RelativeLayout>
    </ScrollView>
</LinearLayout>